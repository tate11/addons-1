<odoo>
    <record model="ir.module.category" id="module_management">
      <field name="name">Demo module access</field>
      <field name="description">User access level for this module</field>
      <field name="sequence">1</field>
    </record>

    <record id="group_user" model="res.groups">
      <field name="name">User</field>
      <field name="category_id" ref="base.module_category_sales_sales"></field>
    </record>

    <record id="group_manager" model="res.groups">
      <field name="name">Manager</field>
      <field name="implied_ids" eval="[(4, ref('model_demo_access_right.group_user'))]"></field>
      <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"></field>
      <field name="category_id" ref="base.module_category_sales_sales"></field>
    </record>

</odoo>